<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dm.user.dao.UserDAO">

    <select id="queryList" resultType="User">
        select id,username,nickname,password,createdate,modifydate from users
    </select>

    <select id="queryUserByUserName" resultType="User">
        select id,username,nickname,password,createdate,modifydate from users where username = #{username}
    </select>

    <insert id="save" parameterType="User" useGeneratedKeys="true" keyProperty="id">
        insert into users values(#{id},#{username},#{nickname},#{password},#{createdate},#{modifydate})
    </insert>

    <delete id="deleteById" parameterType="int">
        delete from users where id = #{id}
    </delete>

    <update id="update" parameterType="User">
        update users set username=#{username},nickname=#{nickname},password=#{password},createdate=#{createdate},modifydate=#{modifydate} where id=#{id}
    </update>

</mapper>