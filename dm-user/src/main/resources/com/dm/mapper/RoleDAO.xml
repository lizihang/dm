<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dm.user.dao.RoleDAO">

	<select id="queryList" resultType="DmRole" parameterType="DmRoleQueryParams">
        select
            id, role_code, role_name, status, create_user, create_date, modify_user, modify_date
        from
            dm_role
        <where>
            <if test="roleName != null">
                and role_name like CONCAT('%',#{roleName,jdbcType=VARCHAR},'%')
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="username != null">
                and id in (select role_id from dm_user_role where user_id = #{userID})
            </if>
        </where>
    </select>

	<insert id="save" parameterType="DmRole" useGeneratedKeys="true" keyProperty="id">
        insert into dm_role
        values(#{id},#{role_code},#{role_name},#{status},#{createUser},#{createDate},#{modifyUser},#{modifyDate})
    </insert>

	<update id="update" parameterType="DmRole">
        update dm_role
        <set>
            <if test="roleCode != null">role_code=#{roleCode},</if>
            <if test="roleName != null">role_name=#{roleName},</if>
            <if test="status != null">status=#{status},</if>
            <if test="modifyUser != null">modify_user=#{modifyUser},</if>
            <if test="modifyDate != null">modify_date=#{modifyDate}</if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

	<delete id="deleteById" parameterType="int">
        delete from dm_role where id = #{id}
    </delete>

</mapper>